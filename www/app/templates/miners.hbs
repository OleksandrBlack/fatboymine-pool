<div class="jumbotron">

	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="panel panel-primary panel-body shadow">
    <p class="lead">Total hashrate: {{format-hashrate model.hashrate}}.</p>
    <strong>Total miners:</strong> <span class="label label-info">{{model.minersTotal}}</span>
				</div>
			</div>
		</div>
	</div>
  
</div>
<div class="container">
  {{#if model.miners}}
  <h4>Miners</h4>
  <div class="table-responsive">
    <table class="table table-condensed table-striped">
      <thead>
        <tr class="table-title">
          <th>Login</th>
          <th>Hashrate</th>
          <th>Last Beat</th>
        </tr>
      </thead>
      <tbody>
        {{#each model.miners as |m|}}
        <tr class="{{if m.offline "warning"}} table-warning">
          <td>{{#link-to 'account' m.login class='hash'}}{{m.login}}{{/link-to}}</td>
          <td>{{format-hashrate m.hr}}</td>
          <td>{{format-date-locale m.lastBeat}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{else}}
  <h3>No miners</h3>
  {{/if}}
</div>
